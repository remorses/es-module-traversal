{
    "compilerOptions": {
        "target": "es2015",
        "downlevelIteration": true,
        "module": "commonjs",
        "rootDir": "src",
        "importHelpers": true,
        "moduleResolution": "Node",
        "lib": ["es2017", "es7", "es6"],
        "declaration": true,
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist", "esm", "example", "tests", "scripts"]
}
